{
  "name": "pabbly-flow",
  "version": "1.0.0",
  "description": "Voice-to-text desktop app with global shortcut",
  "main": "src/main.js",
  "author": "Pabbly",
  "license": "MIT",
  "scripts": {
    "start": "unset ELECTRON_RUN_AS_NODE && electron .",
    "dev": "concurrently \"npm run dev:react\" \"npm run dev:electron\"",
    "dev:react": "vite",
    "dev:electron": "unset ELECTRON_RUN_AS_NODE && NODE_ENV=development electron . --enable-logging",
    "build:react": "vite build",
    "build": "npm run build:react && electron-builder",
    "build:mac": "npm run build:react && electron-builder --mac",
    "build:win": "npm run build:react && electron-builder --win",
    "build:linux": "npm run build:react && electron-builder --linux",
    "build:all": "npm run build:react && electron-builder -mwl",
    "postinstall": "electron-builder install-app-deps",
    "generate-icons": "node scripts/generate-icons.js"
  },
  "build": {
    "appId": "com.pabbly.flow",
    "productName": "Pabbly Flow",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "src/**/*",
      "dist-react/**/*",
      "assets/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": ".env",
        "to": ".env"
      }
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "build/icon.png",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist"
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "win": {
      "icon": "build/icon.png",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "linux": {
      "icon": "build/icon.png",
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Utility"
    }
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^5.1.2",
    "concurrently": "^9.2.1",
    "electron": "^28.3.3",
    "electron-builder": "^26.4.0",
    "sharp": "^0.34.5",
    "vite": "^7.3.1"
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@mui/icons-material": "^7.3.7",
    "@mui/material": "^7.3.7",
    "dotenv": "^16.4.5",
    "electron-store": "^8.2.0",
    "react": "^19.2.4",
    "react-dom": "^19.2.4"
  }
}
