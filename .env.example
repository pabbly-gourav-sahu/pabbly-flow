# Pabbly Flow - Environment Configuration
# Copy this file to .env and customize as needed

# ============ STT Server Configuration ============
STT_SERVER_URL=http://localhost:8000/transcribe
STT_HEALTH_ENDPOINT=/health
STT_TIMEOUT=30000

# ============ Default Settings ============
DEFAULT_SHORTCUT=CommandOrControl+Shift+.
DEFAULT_WHISPER_MODEL=base
DEFAULT_LANGUAGE=auto
DEFAULT_AUTO_PASTE=true
DEFAULT_TRANSLATE_TO_ENGLISH=true

# ============ App Configuration ============
APP_NAME=Pabbly Flow
OVERLAY_WIDTH=120
OVERLAY_HEIGHT=120
OVERLAY_MARGIN=20

# ============ Development ============
DEBUG=false
